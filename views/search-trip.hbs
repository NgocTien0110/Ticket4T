<head>
    <title>Tìm kiếm chuyến đi</title>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <!-- Bootstrap CSS v5.2.1 -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.1/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-iYQeCzEYFbKjA/T2uDLTpkwGzCiq6soy8tYaI1GyVh/UjpbCx/TYkiZhlZB6+fzT" crossorigin="anonymous">

    <!-- font anwsome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.2.0/css/all.min.css">

    <!-- phần header  -->
    <link rel="stylesheet" href="/css/style.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.2.0/css/all.min.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.1/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.1/font/bootstrap-icons.css">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.1/dist/js/bootstrap.bundle.min.js"></script>

    <!-- Custom CSS -->
    <link type="text/css" rel="stylesheet" href="/css/search-trip.css">
    <link type="text/css" rel="stylesheet" href="/css/header_footer.css">
    <link type="text/css" rel="stylesheet" href="/css/home.css">

    <!-- flatpickr -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/flatpickr/dist/flatpickr.min.css">
</head>

{{>header}}
<main>
    <section class="container">
        <div id="search-banner-trip " class="container rounded-4 bg-color-2 mt-3">
            <form action="/search-trip" method="get">
            <div class="row">
                <div class="col-lg-4 pb-0 p-4 ">
                    <div class="border-item d-flex flex-row">
                        <i class=" fas fa-map-marker-alt fa-2x"></i>
                       <input class="form-control mx-2 fs-4 p-0 select-search" name="start" style="background: #dbe2ef;" 
                        list="datalistOptions" id="start" placeholder="{{dataSearch.start}}" required>
                        <datalist id="datalistOptions">
                            {{#each chuyenxes}}
                            <option value="{{ startProvince }}">
                            {{/each}}
                        </datalist>
                    </div>
                    <hr style="margin-right:10px;">
                </div>

                <div class="col-lg-4 pb-0 p-4 ">
                    <div class="border-item d-flex flex-row">
                        <i class="fas fa-map-marker-alt fa-2x"></i>
                        <input class="form-control mx-2 fs-4 p-0 select-search" name="end" style="background: #dbe2ef;" 
                        list="datalistOptions" id="end" placeholder="{{dataSearch.end}}" required>
                        <datalist id="datalistOptions">
                            {{#each chuyenxes}}
                            <option value="{{ endProvince }}">
                            {{/each}}
                        </datalist>
                    </div>
                    <hr style="margin-right:10px;">
                </div>

                <div class="col-lg-3 pb-0 p-4 ">
                    <div class="border-item d-flex flex-row">
                         <i class="fa-solid fa-calendar-days fa-2x"></i>
                        <!-- datetimepicker -->
                        
                        <input type="date" name="date" class="form-control mx-2 fs-4 p-0 select-search" style="background: #dbe2ef;"
                            id="datetimepicker" placeholder="{{dataSearch.date}}" required>
                    </div>
                    <hr style="margin-right:10px;">
                </div>

                <div class="col-lg-1">
                    <div class=" mt-3 ">
                        <a href="search-trip.html">
                            <button id="btn-search" type="submit" value="submit"
                                class="col-12 btn btn-lg px-lg-4 px-md-5 my-sm-3 mt-md-0">
                                <i class="fa-solid fa-magnifying-glass "></i>
                            </button>
                        </a>
                    </div>
                </div>
            </div>
            </form>
        </div>
    </section>

    <section class="container">
        <div class="row py-5">
            <div class="col-lg-3 ">
                <div class=" d-flex justify-content-between">
                    <h4 class="">
                        Bộ lọc
                    </h4>
                    <a href="#" class="align-self-center"> Xóa lọc</a>
                </div>

                <div class="border mt-1 p-3">
                    <!-- giá vé  -->
                    <div class="mb-4">
                        <label for="customRange3" class="form-label">Giá vé</label>
                        <input type="range" class="form-range " min="0" max="5" step="0.5" id="customRange3">
                        <div class="d-flex justify-content-between">
                            <p>0đ</p>
                            <p>2,000,000đ</p>
                        </div>
                    </div>

                    <!-- nhà xe  -->
                    <div class="mb-4">
                        <label for="" class="mb-2">Nhà xe</label>
                        {{#each nhaxes}}
                        <div class="form-check">
                            <input class="form-check-input me-3" type="checkbox" value="" id="nha-xe-1">
                            <label class="form-check-label" for="nha-xe-1">
                                Xe {{name}}
                            </label>
                        </div>
                        {{/each}}
                    </div>

                    <!-- loại xe  -->
                    <div class="mb-4">
                        <label for="" class="mb-2">Loại xe</label>
                        {{#each loaixes}}
                        <div class="form-check">
                            <input class="form-check-input me-3" type="checkbox" value="" id="nha-xe-1">
                            <label class="form-check-label" for="nha-xe-1">
                                {{name}}
                            </label>
                        </div>
                        {{/each}}
                    </div>

                </div>
            </div>

            <div class="col-lg-9 ">
                <div class="">
                    <div class=" d-flex justify-content-between my-3">
                        <h4 class="">
                            Sắp xếp theo:
                        </h4>
                        <p class="fs-5 py-1 px-2 rounded-2 btn btn-info bg-color-3 text-white">Giờ đi sớm nhất</p>
                        <a href="#" class="text-black">
                            <p class="fs-5">Giờ đi muộn nhất</p>
                        </a>
                        <a href="#" class="text-black">
                            <p class="fs-5">Giá tăng dần</p>
                        </a>
                        <a href="#" class="text-black">
                            <p class="fs-5">Giá giảm dần</p>
                        </a>
                    </div>
                    <hr>
                </div>

                <div class="my-3">
                    {{#each chuyenxes}}
                    
                    <div class="card mb-3">
                        <div class="row">
                            <div class="col-md-4">                        
                                <a href="/search-trip/{{id}}">
                                    <img src="{{ NhaXe.imageCarCom }}" class="img-fluid rounded-2"
                                        style="max-width:auto; height:100%;" alt="tuyen xe 1">
                                </a>                                                           
                            </div>
                            <div class="col-md-8">
                                <div class="card-body pb-0 d-flex flex-column justify-content-between">
                                    <div class="d-flex justify-content-between">
                                        <div class="d-flex">                                    
                                            <a href="/search-trip/{{id}}">
                                                <h4 class="card-title  text-3">{{NhaXe.name}}</h4>
                                            </a>                                    
                                            <div class="p-2 ms-2 bg-color-2 rounded-2">
                                                {{!-- <span><i class="fa-solid fa-star text-warning"></i>4.8 (1800)</span> --}}
                                                <span><i class="fa-solid fa-star text-warning"></i>{{ NhaXe.stars }} ({{ NhaXe.Reviews.length }})</span>
                                            </div>
                                        </div>
                                        <div class="d-flex ">
                                            <h4 class="color-3 fw-bold">{{ formatPrice price }} đ</h4>
                                        </div>
                                    </div>
                                    <div class="d-flex">
                                        <p class="fw-light">{{ LoaiXe.name }} {{totalNumSeats}} chỗ </p>
                                    </div>
                                    <div class="row">
                                        <div class="col-12 d-flex flex-column">
                                            <div class="d-inline-flex justify-content-between">
                                                <div class="d-inline-flex">
                                                    <i class="fa-solid fa-location-dot me-3"></i>
                                                    <p class="me-5 fw-bold">{{time startTime}}</p>
                                                    <p> {{ startLocation }}</p>
                                                </div>
                                                <a href="/search-trip/{{id}}/thanh-toan/xacnhan"> <button
                                                        class="p-1 px-4 bg-color-3 text-white rounded-2 border-0">Đặt
                                                        vé</button></a>
                                            </div>
                                            <div class="d-inline-flex">
                                                <p class="ms-4">{{ totalTime startTime endTime }}</p>

                                            </div>
                                            <div class="d-inline-flex justify-content-between">
                                                <div class="d-flex">
                                                    <i class="fa-solid fa-location-dot me-3"></i>
                                                    <p class="me-5 fw-bold">{{time endTime}}</p>
                                                    <p> {{ endLocation }}</p>
                                                </div>
                                                <a href="/search-trip/{{id}}">Xem thông tin chi tiết</a>
                                            </div>
                                        </div>
                                    </div>

                                </div>
                            </div>
                        </div>
                    </div>
                   
                    {{/each}}


                </div>

                <nav aria-label="Page navigation">
                    {{!-- {{{ createPagination pagination paginationClass="pagination justify-content-center" leftText="&laquo;" rightText="&raquo;" }}} --}}
                    <ul class="pagination  justify-content-center  ">
                        <li class="page-item disabled">
                            <a class="page-link" href="#" aria-label="Previous">
                                <span aria-hidden="true">&laquo;</span>
                            </a>
                        </li>
                        <li class="page-item active" aria-current="page"><a class="page-link" href="#">1</a></li>
                        <li class="page-item"><a class="page-link" href="#">2</a></li>
                        <li class="page-item"><a class="page-link" href="#">3</a></li>
                        <li class="page-item">
                            <a class="page-link" href="#" aria-label="Next">
                                <span aria-hidden="true">&raquo;</span>
                            </a>
                        </li>
                    </ul>
                </nav>

            </div>
        </div>

    </section>
</main>
{{>footer}}