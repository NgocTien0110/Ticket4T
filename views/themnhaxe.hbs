<script>

    let i = 0;

    function themphongve() {
        let themphongve = document.getElementById("phongve");
        let s = `
         <div class="row mb-2" id="themphongve${i}">
            <div class="col-md-3">
                <div class="col-sm-10">
                    <label for="phoneNo">Số điện thoại</label>
                    <input type="" class="form-control" id="phoneNo" name="phoneNo" placeholder="Số điện thoại" required>
                </div>
            </div>
            <div class="col-md-4">
                <div class="col-sm-10">
                    <label for="address">Địa chỉ</label>
                    <input type="" class="form-control" id="address" name="address" placeholder="Địa chỉ" required>
                </div>
            </div>
            <div class="col-md-3">
                <div class="col-sm-10">
                    <label for="mainRoute" class="form-label">Tỉnh:</label>
                    <select class="form-select" id="mainRoute" name="mainRoute" required>
                        <option>Chọn tỉnh</option>
                        {{#each tinhThanh}}
                            <option value="{{this.name}}">{{this.name}}
                            </option>
                        {{/each}}
                    </select>
                </div>
            </div>
            <div class="col-md-2">
                <div class="col-sm-10">                                                                    
                    <button class="btn btn-danger mt-4 ml-3 px-4" onclick="xoaphongve(${i})"> - </button>
                </div>
            </div>
            
        </div>`
        themphongve.insertAdjacentHTML("beforeend", s);
        i++;        
    }

    function xoaphongve(a) {
        let xoaphongve = document.getElementById("phongve");
        let xoa = document.getElementById(`themphongve${a}`);
        xoaphongve.removeChild(xoa);
    }



    function selected(value) {
        document.getElementById(value).selected = true
    }

    function sendDataToServer() {
        if (confirm("Bạn có muốn thêm nhà xe này không?")) {
            let form = document.getElementById('addNhaXe');
            form.submit();
        }
    }
    let avatar = document.querySelector("#avatar");
    let img = document.querySelector(".img-avt");
    let k;
    avatar.addEventListener("change", function () {
        let file = this.files[0];
        if (file) {
            let reader = new FileReader();
            reader.readAsDataURL(file);
            img.style.width = "197.8px";
            img.style.height = "197.8px";
            img.style.objectFit = "cover";
            reader.onload = function () {
                img.src = this.result;
                k = this.result;
            }

        }
    })





    // multiple file
    let img_detail = document.querySelector(".img-detail");
    let input_detail = document.querySelector("#anhchitiet");
    let image_detail = document.querySelector(".image-detail");
    // multiple file
    input_detail.addEventListener("change", function () {
        let len = this.files.length;
        for (let i = 0; i < len; i++) {
            let file = this.files[i];
            if (file) {
                let reader = new FileReader();
                reader.readAsDataURL(file);
                img_detail.style.display = "none";
                reader.onload = function () {
                    let img = document.createElement("img");
                    img.className = "img-fluid";
                    img.style.width = "197.8px";
                    img.style.height = "197.8px";
                    img.style.objectFit = "cover";
                    img.src = reader.result;
                    image_detail.appendChild(img);

                }
            }
        }
    });






</script>
